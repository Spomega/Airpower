                                    <Image Source="{Binding thumbnail_url}" Width="100" Height="100"/>
                                    <StackPanel Orientation="Vertical" >
                                                <TextBlock Text="{Binding description}"  Foreground="#FF18E818" Margin="6"/>
                                                <TextBlock Text="{Binding price}" Foreground="#FF18E818" Margin="6"/>
                                            <TextBlock Text="{Binding currency}" Foreground="#FF18E818" Margin="6"/>

                                        </StackPanel>
                                   
                                </StackPanel>
                                
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>-->
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <toolkit:WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <toolkit:HubTile  Size="Medium" Margin="3" Title="{Binding price}"
                             GroupTag="{Binding GroupTag}"
                             Source="{Binding thumbnail_url}" Message="{Binding description }">
                                </toolkit:HubTile>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </phone:PivotItem>

            <!--Pivot item two-->
            <phone:PivotItem Header="PDF">
                <Grid>
                    <ListBox Name="lstBoxPDF" SelectionChanged="lstBoxPDF_SelectionChanged" >
                        <!--<ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border  Height="120" BorderBrush="#D8D8D8" BorderThickness="0,0,0,2">
                                  
                                <StackPanel Orientation="Horizontal" Name="stkcontent">
                                    <Image Source="{Binding thumbnail_url}" Width="100" Height="100"/>
                                    <StackPanel Orientation="Vertical" >
                                                <TextBlock Text="{Binding description}"  Foreground="#FF18E818" Margin="6"/>
                                                <TextBlock Text="{Binding price}" Foreground="#FF18E818" Margin="6"/>
                                            <TextBlock Text="{Binding currency}" Foreground="#FF18E818" Margin="6"/>

                                        </StackPanel>
                                   
